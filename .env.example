# Flask Settings
FLASK_APP=app:create_app
FLASK_DEBUG=1
FLASK_SECRET_KEY=change_this_to_a_secure_random_string

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# App Configuration
# The email address of the first user who will become the Owner
# (Crucial for initial setup)
OWNER_EMAIL=your_email@example.com

# Storage & Task Configuration (Defaults for Local Dev)
# STORAGE_BACKEND: 'local' or 'gcs'
STORAGE_BACKEND=local
# TASK_RUNNER: 'sync' or 'cloud_tasks'
TASK_RUNNER=sync
# BYPASS_AUTH: 'true' to enable one-click dev login (DO NOT USE IN PROD)
BYPASS_AUTH=true

# Database (Local Docker)
DATABASE_URL=postgresql://user:password@db:5432/thesalo_db

# GCP Settings (Optional for Local, Required for Staging/Prod)
# GOOGLE_CLOUD_PROJECT=thesalo-gallery
# GCS_BUCKET_NAME=thesalo-uploads-thesalo-gallery
# CLOUD_TASKS_QUEUE_PATH=projects/...
